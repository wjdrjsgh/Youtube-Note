{
	"compilerOptions": {
		"baseUrl": "./src",
		"sourceMap": true,
		"module": "ESNext",
		"jsx": "react",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	},
	"include": ["**/*.ts", "src/main.tsx"]
}
